                            <li style="text-align:center">@Html.ActionLink("酒店介绍", "Introduce", "Home")</li>
                            <li style="text-align:center">@Html.ActionLink("住房预约", "Subscrube", "Home")</li>
                            <li style="text-align:center">@Html.ActionLink("住房查看", "Check", "Home")</li>
                            <li style="text-align:center">@Html.ActionLink("关于我们", "About", "Home")</li>@*导航栏中的 “关于”*@
                            <li style="text-align:center">@Html.ActionLink("联系方式", "Contact", "Home")</li>@*导航栏中的 “联系方式”*@
                        </ul>
                    </div>@*----------------------------------------------------------------------------------------------------------------------------------->>>>>>>>>>>>>结束*@
                </div>@*----------------------------------------------------------------------->>>>>>>>>>>>容器标签结束*@
            </div>
        </footer>
    </div>
 

